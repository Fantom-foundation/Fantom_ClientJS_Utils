{
  "name": "fantom-ledgerjs",
  "description": "Fantom Ledger Hardware Wallet High Level API",
  "version": "1.0.4",
  "files": [
    "lib"
  ],
  "main": "fantom-nano.js",
  "repository": "github:Fantom-foundation/Fantom_LedgerJS",
  "homepage": "https://github.com/Fantom-foundation/Fantom_LedgerJS",
  "keywords": [
    "Ledger",
    "LedgerWallet",
    "Fantom",
    "FTM",
    "NanoS",
    "Wallet"
  ],
  "author": "Jiri Malek <jirka.malek@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@ledgerhq/hw-transport": "^5.22.0",
    "babel-runtime": "^6.26.0",
    "core-js": "^3.6.5",
    "ethereumjs-common": "^1.5.2",
    "ethereumjs-tx": "^2.1.2",
    "ethereumjs-util": "^7.0.4",
    "node-int64": "^0.4.0",
    "rlp": "^2.2.6",
    "u2f-api": "^1.1.1",
    "web3": "^4.0.2",
    "web3-utils": "^1.2.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@ledgerhq/hw-transport-node-hid": "^5.22.0",
    "chai": "^4.2.0",
    "mocha": "^8.1.3"
  },
  "scripts": {
    "clean": "bash ./tools/clean.sh",
    "help": "babel --help",
    "build": "babel src --out-dir lib --source-maps --verbose --delete-dir-on-start",
    "build-example": "babel example/src --source-maps --out-dir example/lib",
    "example": "npm run clean >/dev/null 2>&1 && npm run build && npm run build-example && node example/lib/example.js",
    "test": "npm run build && mocha"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ],
            "node": "10"
          },
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
